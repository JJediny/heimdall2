{
  "name": "heimdall-server",
  "version": "2.3.5",
  "description": "",
  "author": "",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "rimraf ../../dist/server",
    "build": "nest build",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start": "node ../../dist/server/main",
    "lint": "eslint \"{src,migrations,seeders,test}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,migrations,seeders,test}/**/*.ts\" --max-warnings 0",
    "test": "jest --silent",
    "test:log": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --silent --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --runInBand --silent --config test/jest-e2e.json",
    "test:ci-cov": "jest --silent --coverage --runInBand"
  },
  "dependencies": {
    "@casl/ability": "^4.1.6",
    "@heimdall/interfaces": "^2.3.5",
    "@nestjs/common": "^7.0.13",
    "@nestjs/core": "^7.0.13",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.13",
    "@nestjs/sequelize": "^0.1.0",
    "@nestjs/serve-static": "^2.1.3",
    "@types/express-rate-limit": "^5.1.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.2.3",
    "helmet": "^4.1.1",
    "js-levenshtein": "^1.1.6",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "sequelize": "^5.21.10",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^1.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.13",
    "@types/bcrypt": "^3.0.0",
    "@types/expect-puppeteer": "^4.4.3",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.7",
    "@types/jest-environment-puppeteer": "^4.3.2",
    "@types/js-levenshtein": "^1.1.0",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.11.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/puppeteer": "^5.4.0",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^26.4.2",
    "mock-fs": "^4.12.0",
    "puppeteer": "^5.3.1",
    "supertest": "^6.0.0",
    "ts-jest": "^26.1.3",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "testTimeout": 10000
  }
}
